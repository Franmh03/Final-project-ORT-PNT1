@{
    ViewBag.Title = "Home Page";
}

<main>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Cine Ort</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                font-family: Arial, sans-serif;
            }

            .navbar-nav .nav-item .nav-link {
                color: #fff !important;
            }

            .footer {
                background-color: #333;
                color: #fff;
                padding: 20px 0;
            }

                .footer a {
                    color: #fff;
                }
        </style>
    </head>
    <body>

        <!-- Carousel -->
        <div id="cineCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#cineCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#cineCarousel" data-slide-to="1"></li>
                <li data-target="#cineCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/Cine1.jpg" class="d-block w-100" alt="Cine 1">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/Cine2.jpg" class="d-block w-100" alt="Cine 2">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/Cine3.jpg" class="d-block w-100" alt="Cine 3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#cineCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#cineCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Comprar Tikets Button -->
        <div class="container text-center my-5">
            <a href="/comprarTikets" class="btn btn-primary btn-lg">Comprar Tikets</a>
        </div>

        @Html.ActionLink("Cartelera", "Cartelera", "Home", new { area = "" }, new { @class = "nav-link" })

        <!-- Footer -->
        <footer class="footer text-center">
            <div class="container">
                <p>Síguenos en</p>
                <a href="https://facebook.com/cineOrt" target="_blank">Facebook</a> |
                <a href="https://instagram.com/cineOrt" target="_blank">Instagram</a> |
                <a href="https://twitter.com/cineOrt" target="_blank">Twitter</a>
            </div>
        </footer>

        @*<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>*@
    </body>

</main>